@{
    ViewData["Title"] = "Services";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My MVC App</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 60px;
            background-color: #f8f9fa;
        }

        .services-container {
            text-align: center;
            padding: 50px;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: auto;
        }

        .service-item {
            margin: 20px 0;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">My MVC App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/About">About</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/Home/Services">Services</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Privacy">Privacy</a></li>
                    
                </ul>
            </div>
        </div>
    </nav>

    <div class="services-container mt-5">
        <h1 class="display-4">Our Services</h1>
        <p class="lead">We offer a range of professional services tailored to your needs.</p>

        <div class="service-item">
            <h3>Web Development</h3>
            <p>Building responsive, modern, and user-friendly websites using the latest technologies.</p>
        </div>

        <div class="service-item">
            <h3>Mobile App Development</h3>
            <p>Creating feature-rich Android and iOS applications that meet your business goals.</p>
        </div>

        <div class="service-item">
            <h3>Data Analysis</h3>
            <p>Helping businesses make informed decisions through data collection, analysis, and reporting.</p>
        </div>

        <div class="service-item">
            <h3>Consulting</h3>
            <p>Providing expert advice to optimize processes, strategy, and technology adoption.</p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
